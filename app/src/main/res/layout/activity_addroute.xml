<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/samm_toolbar"
        android:layout_width="match_parent" android:layout_height="match_parent" />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_routes"
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.umandalmead.samm_v1.NonScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/routelistview"></com.umandalmead.samm_v1.NonScrollListView>

        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>