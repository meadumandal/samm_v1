<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context=".SignUpActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgLogo"
        android:src="@drawable/sammlogo"
        android:layout_marginEnd="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textNewAcct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="NEW ACCOUNT"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_below="@+id/imgLogo"
        android:layout_alignStart="@+id/imgLogo"
        android:layout_alignEnd="@+id/imgLogo" />

    <!--<android.support.design.widget.TextInputLayout-->
        <!--android:id="@+id/TextIL_editfirstName"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <!---->
    <!--</android.support.design.widget.TextInputLayout>-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_firstName"
        android:layout_marginTop="29dp"
        android:singleLine="false"
        android:hint="First Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="@android:color/white"
        android:layout_below="@+id/textNewAcct"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_lastName"
        android:layout_below="@+id/edit_firstName"
        android:layout_alignParentStart="true"
        android:hint="Last Name"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="@android:color/white" />

    <EditText
        android:id="@+id/edit_plateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_lastName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_lastName"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRoute"
        android:layout_below="@+id/edit_plateNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Username"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_driverOrigin"
        android:layout_below="@+id/textRoute"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textRoute"
        android:hint="Password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edit_confirmpassword"
        android:layout_below="@+id/edit_driverOrigin"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edit_driverOrigin"
        android:hint="Confirm Password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="@android:color/white" />

    <Button
        android:id="@+id/btn_signup"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_confirmpassword"
        android:background="@drawable/signup_oval_background"

        android:text="Sign Up"
        android:textColor="#000000" />
    <!--android:onClick="CreateAccount"-->

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
        <!--android:id="@+id/textView2"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignEnd="@+id/textNewAcct"-->
        <!--android:layout_marginEnd="59dp" />-->

    <TextView
        android:id="@+id/textAlreadyAMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a member?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/btn_signup"
        android:layout_toStartOf="@+id/linkSignIn"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Login"
        android:id="@+id/linkSignIn"
        android:textColor="@color/colorWhite"
        android:layout_alignBaseline="@+id/textAlreadyAMember"
        android:layout_alignBottom="@+id/textAlreadyAMember"
        android:layout_alignEnd="@+id/textNewAcct" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="I'm a driver"
        android:id="@+id/linkDriver"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/linkSignIn" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />


</RelativeLayout>
