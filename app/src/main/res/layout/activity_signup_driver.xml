<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/evx_main_logo" />

    <TextView
        android:id="@+id/textNewAcct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgLogo"
        android:layout_below="@+id/imgLogo"
        android:text="NEW ACCOUNT"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:typeface="sans" />

    <EditText
        android:id="@+id/edit_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textNewAcct"
        android:layout_marginTop="29dp"
        android:backgroundTint="@android:color/black"
        android:hint="First Name"
        android:singleLine="false"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack" />

    <EditText
        android:id="@+id/edit_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_firstName"
        android:backgroundTint="@android:color/black"
        android:hint="Last Name"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack" />

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_lastName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_lastName"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Plate Number"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack" />

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_address"
        android:text="Route"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textUsername"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textUsername"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Origin"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack" />

    <EditText
        android:id="@+id/edit_driverDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_password"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_password"
        android:backgroundTint="@android:color/black"
        android:ems="10"
        android:hint="Destination"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack" />

    <Button
        android:id="@+id/btn_save"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linkSignIn"

        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#DB0A5B"
        android:text="Sign Up"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textAlreadyAMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/linkSignIn"
        android:text="Already a member?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/linkSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAlreadyAMember"
        android:layout_alignBottom="@+id/textAlreadyAMember"
        android:layout_alignEnd="@+id/textNewAcct"
        android:text="Login"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorBlack" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_confirmpassword"
        android:buttonTint="@color/colorBlack"
        android:text="Vice Versa"
        android:textColor="@color/colorBlack" />
</RelativeLayout>
