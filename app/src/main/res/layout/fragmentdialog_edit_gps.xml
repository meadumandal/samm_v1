<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    tools:context="com.umandalmead.samm_v1.MenuActivity"
    android:background="@color/colorWhite"
    android:weightSum="1"
    android:id="@+id/addGPSLinearLayout">

    <LinearLayout
        android:id="@+id/frmLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/txtActionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT GPS"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:textStyle="bold" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/GPSMobileNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"

                android:gravity="center_horizontal"
                android:hint="GPS Mobile Number"
                android:inputType="text|phone"

                android:singleLine="true"

                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorAccent"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/GPSIMEI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"

                android:gravity="center_horizontal"
                android:hint="GPS IMEI"
                android:inputType="text|number"

                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorAccent"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinnerNetworkProviders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:foregroundTint="@color/colorAccent"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnUpdateGPS"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:layout_weight=".4"
            android:background="@drawable/oval_background"
            android:backgroundTint="@color/colorAccent"
            android:text="Update GPS"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnDeleteGPS"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:layout_weight=".4"
            android:background="@drawable/oval_background"
            android:backgroundTint="@color/colorOrange"
            android:text="Delete GPS"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</LinearLayout>


