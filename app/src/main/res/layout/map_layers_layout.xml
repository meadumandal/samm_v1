<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/LL_mapStyleHolder"
    android:visibility="invisible"
    android:background="@drawable/rounded_corners_layout_whitebg"
    android:layout_gravity="center">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10sp"
    android:textStyle="bold"
    android:textColor="@color/colorBlack"
    android:layout_gravity="center"
    android:text="SELECT MAP TYPE"/>
 <LinearLayout
     android:layout_marginTop="5dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <ImageButton
             android:id="@+id/IB_mapType_normal"
             android:layout_width="60dip"
             android:layout_height="60dip"
             android:scaleType="fitXY"
             android:src="@drawable/map_style_auto_icon"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:layout_gravity="center"
             android:textSize="10sp"
             android:text="Auto"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <ImageButton
             android:id="@+id/IB_mapType_satellite"
             android:layout_width="60dip"
             android:layout_height="60dip"
             android:scaleType="fitXY"
             android:src="@drawable/map_style_satellite_icon"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:layout_gravity="center"
             android:textSize="10sp"
             android:text="Satellite"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <ImageButton
             android:id="@+id/IB_mapType_hybrid"
             android:layout_width="60dip"
             android:layout_height="60dip"
             android:scaleType="fitXY"
             android:src="@drawable/map_style_terrain_hybrid"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:layout_gravity="center"
             android:textSize="10sp"
             android:text="Hybrid"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <ImageButton
             android:id="@+id/IB_mapType_terrain"
             android:layout_width="60dip"
             android:layout_height="60dip"
             android:scaleType="fitXY"
             android:src="@drawable/map_style_terrain_icon"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/colorBlack"
             android:layout_gravity="center"
             android:textSize="10sp"
             android:text="Terrain"/>
     </LinearLayout>


 </LinearLayout>
</LinearLayout>